#include <iostream>
#include <ctime>
#include <iomanip>
using namespace std;
void insertionSort(int *, int);
void main()
{
  int n = 10; 
  int a[n];
  for (int i = 0; i < size_array; i++)
	{
		a[i] = rand() % 100; 
		cout << setw(2) << a[i] << "  ";
	}
  cout << endl;
  insertionSort(a, n);
  for (int i = 0; i < size_array; i++)
	{ 
		cout << setw(2) << a[i] << "  ";
	}
  cout << endl;
  system("pause");
 }
 void insertionSort(int *array, int size) 
{
	int temp, item; 
	for (int i = 1; i < size; i++)
	{
		temp = arrayPtr[i]; 
		item = i - 1;
		while (item >= 0 && array[item] > temp) 
		{
			array[item + 1] = array[item]; 
			array[item] = temp;
			item--;
		}
	}
}
